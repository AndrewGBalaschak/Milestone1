<Window x:Class="Milestone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="Yelp App" Height="450" Width="600">
    <Grid>
        <Label x:Name="StateLabel" Content="State" HorizontalAlignment="Left" Margin="158,31,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label x:Name="CityLabel" Content="City" HorizontalAlignment="Left" Margin="158,81,0,0" VerticalAlignment="Top" FontSize="16"/>
        <ComboBox x:Name="stateList" HorizontalAlignment="Left" Margin="208,31,0,0" VerticalAlignment="Top" Width="235" FontSize="16" SelectionChanged="stateList_SelectionChanged"/>
        <ComboBox x:Name="cityList" HorizontalAlignment="Left" Margin="208,81,0,0" VerticalAlignment="Top" Width="235" FontSize="16" SelectionChanged="cityList_SelectionChanged"/>
        <DataGrid x:Name="businessGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,131,10,10" FontSize="16" SelectionChanged="businessGrid_SelectionChanged"/>

    </Grid>
</Window>
